<%- include ('partials/_header') %>

<div class="container mt-5">
  <h1>Edit Products</h1>
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <form action="/update/<%= data.id %>" method="post">
            <div class="form-group">
              <input
                type="text"
                name="title"
                value="<%= data.title %>"
                placeholder="Title"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                type="number"
                name="price"
                value="<%= data.price %>"
                placeholder="Price"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <textarea
                rows="3"
                name="description"
                placeholder="Description"
                class="form-control"
              ><%= data.description %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Edit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('partials/_footer') %>
