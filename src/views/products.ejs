<%- include ('partials/_header') %>

<div class="container mt-4">
  <h1>Create Products</h1>
  <div class="row mt-4">
    <div class="col-md-8">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>nÂ°</td>
            <td>Title</td>
            <td>Price</td>
            <td>Description</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %> <% for(var i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= data[i].title %></td>
            <td><%= data[i].price %></td>
            <td><%= data[i].description %></td>
            <td>
              <a href="/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
              <a href="/delete/<%= data[i].id %>" class="btn btn-danger"
                >Delete</a
              >
              <div>
                <form
                  action="http://localhost:5000/checkout"
                  class="pt-3"
                  method="POST"
                >
                  <input type="hidden" name="title" value=<%= data[i].title %> />

                  <input type="hidden" name="price" value=<%= data[i].price %> />

                  <button
                    type="submit"
                    value="Comprar ahora"
                    class="btn btn-primary btn-block"
                  >
                    Comprar ahora
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input
                type="text"
                name="title"
                placeholder="Title"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <input
                type="number"
                name="price"
                placeholder="Price"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <textarea
                rows="3"
                name="description"
                placeholder="Description"
                class="form-control"
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('partials/_footer') %>